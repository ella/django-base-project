#!/bin/sh
# postinst script for centrum-djangobaselibrary-djangobaseproject
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        # public dir chown

	# files
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject/*
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject/css/*
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject/js/*
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject/images/*
    	chown centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject/images/*/*

	# symlinks
    	chown -h centrum.centrum /centrum/img/WWW/djangobaselibrary/djangobaseproject_*

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

